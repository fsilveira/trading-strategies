//@version=5
strategy("BB Squeeze + SMC Breakout - Day Trade Forex", overlay=true, 
         initial_capital=10000, 
         default_qty_type=strategy.percent_of_equity,
         commission_type=strategy.commission.percent,
         commission_value=0.0001)

// ============================================================================
// üìä ESTRAT√âGIA BB SQUEEZE + SMC BREAKOUT - DAY TRADE FOREX
// ============================================================================
//
// üéØ PROP√ìSITO:
// Esta estrat√©gia combina Bollinger Bands Squeeze com Smart Money Concepts (SMC)
// para identificar breakouts de alta probabilidade em day trade forex.
//
// üîß FUNCIONAMENTO:
// 1. BB SQUEEZE: Detecta per√≠odos de baixa volatilidade (acumula√ß√£o)
// 2. SMC CONFIRMA√á√ÉO: Identifica Break of Structure (BOS), Change of Character (CHoCH),
//    Liquidity Zones e Order Blocks
// 3. ENTRADA: Breakout da zona de compress√£o com confirma√ß√£o SMC
// 4. GEST√ÉO: Stop loss baseado em ATR, take profit com risk/reward configur√°vel
//
// üìà CARACTER√çSTICAS:
// - Combina an√°lise de volatilidade (BB) com conceitos de smart money (SMC)
// - Filtros de sess√£o forex (Londres, NY, T√≥quio)
// - Filtros de tempo para evitar spreads altos
// - Confirma√ß√£o de volume e momentum
// - Trailing stop opcional
//
// ‚è∞ TIMEFRAME IDEAL: M5, M15
// üí± PARES RECOMENDADOS: EUR/USD, GBP/USD, USD/JPY
// üéØ TIPO: Breakout Trading (Trading de Rompimento)
// ‚≠ê DIFICULDADE: ‚≠ê‚≠ê‚≠ê‚≠ê (Avan√ßado)
//
// ============================================================================

// ===== INPUTS CONFIGUR√ÅVEIS =====
// Par√¢metros de Risco
risk_per_trade = input.float(2.0, "Risco por Trade (%)", minval=0.1, maxval=5.0, group="Gerenciamento de Risco")
risk_reward_ratio = input.float(2.5, "Risk/Reward Ratio", minval=1.0, maxval=5.0, group="Gerenciamento de Risco")
use_trailing_stop = input.bool(true, "Usar Trailing Stop", group="Gerenciamento de Risco")
trailing_stop_atr = input.float(1.5, "Trailing Stop (ATR)", minval=0.5, maxval=3.0, group="Gerenciamento de Risco")

// Par√¢metros Bollinger Bands
bb_length = input.int(20, "BB Length", minval=1, group="Bollinger Bands")
bb_mult = input.float(2.0, "BB Multiplier", minval=0.1, group="Bollinger Bands")
bb_squeeze_threshold = input.float(0.02, "BB Squeeze Threshold", minval=0.01, maxval=0.1, group="Bollinger Bands")

// Par√¢metros SMC (Smart Money Concepts)
smc_lookback = input.int(50, "SMC Lookback", minval=20, group="Smart Money Concepts")
liquidity_zone_size = input.int(5, "Liquidity Zone Size", minval=1, group="Smart Money Concepts")
order_block_lookback = input.int(20, "Order Block Lookback", minval=10, group="Smart Money Concepts")

// Par√¢metros ATR
atr_length = input.int(14, "ATR Length", minval=1, group="Volatilidade")
atr_multiplier = input.float(2.0, "ATR Multiplier", minval=1.0, maxval=5.0, group="Volatilidade")

// Filtros de Tempo (Day Trade)
use_time_filter = input.bool(true, "Usar Filtro de Tempo", group="Filtros de Tempo")
start_hour = input.int(8, "Hora In√≠cio (GMT)", minval=0, maxval=23, group="Filtros de Tempo")
end_hour = input.int(17, "Hora Fim (GMT)", minval=0, maxval=23, group="Filtros de Tempo")
avoid_news = input.bool(true, "Evitar Hor√°rios de Not√≠cias", group="Filtros de Tempo")

// Filtros de Sess√£o Forex
use_session_filter = input.bool(true, "Usar Filtro de Sess√£o", group="Sess√µes Forex")
london_session = input.bool(true, "Sess√£o Londres (8-17 GMT)", group="Sess√µes Forex")
ny_session = input.bool(true, "Sess√£o NY (13-22 GMT)", group="Sess√µes Forex")
tokyo_session = input.bool(false, "Sess√£o T√≥quio (0-9 GMT)", group="Sess√µes Forex")

// ===== C√ÅLCULOS DE INDICADORES =====
// Bollinger Bands
bb_middle = ta.sma(close, bb_length)
bb_std = ta.stdev(close, bb_length)
bb_upper = bb_middle + (bb_std * bb_mult)
bb_lower = bb_middle - (bb_std * bb_mult)

// BB Squeeze Detection
bb_width = (bb_upper - bb_lower) / bb_middle
bb_squeeze = bb_width < bb_squeeze_threshold
bb_expansion = bb_width > bb_width[1] and bb_width[1] > bb_width[2]

// ATR para volatilidade
atr = ta.atr(atr_length)

// Indicadores de Momentum
rsi = ta.rsi(close, 14)
stoch_k = ta.stoch(close, high, low, 14)
stoch_d = ta.sma(stoch_k, 3)

// Volume
volume_ma = ta.sma(volume, 20)
volume_spike = volume > volume_ma * 1.5

// ===== SMC (SMART MONEY CONCEPTS) =====
// Break of Structure (BOS)
highest_high = ta.highest(high, smc_lookback)
lowest_low = ta.lowest(low, smc_lookback)
bos_bullish = close > highest_high[1]
bos_bearish = close < lowest_low[1]

// Change of Character (CHoCH)
choch_bullish = low < ta.lowest(low, smc_lookback)[1] and close > ta.highest(high, 10)
choch_bearish = high > ta.highest(high, smc_lookback)[1] and close < ta.lowest(low, 10)

// Liquidity Zones (Highs and Lows)
liquidity_high = ta.highest(high, liquidity_zone_size)
liquidity_low = ta.lowest(low, liquidity_zone_size)
liquidity_grab_bullish = low <= liquidity_low[1] and close > liquidity_low[1]
liquidity_grab_bearish = high >= liquidity_high[1] and close < liquidity_high[1]

// Order Blocks (Simplified)
order_block_bullish = low == ta.lowest(low, order_block_lookback) and close > open
order_block_bearish = high == ta.highest(high, order_block_lookback) and close < open

// ===== CONDI√á√ïES DE FILTROS =====
// Filtro de Tempo
time_ok = not use_time_filter or (hour >= start_hour and hour <= end_hour)
news_ok = not avoid_news or (hour != 8 and hour != 13 and hour != 15)

// Filtro de Sess√£o Forex
london_active = not use_session_filter or not london_session or (hour >= 8 and hour <= 17)
ny_active = not use_session_filter or not ny_session or (hour >= 13 and hour <= 22)
tokyo_active = not use_session_filter or not tokyo_session or (hour >= 0 and hour <= 9)
active_session = london_active or ny_active or tokyo_active

// Filtro de Volatilidade
atr_ok = atr > atr * 0.5  // ATR n√£o muito baixo

// ===== L√ìGICA DE ENTRADA =====
// Condi√ß√µes Long (BB Squeeze + SMC Breakout Bullish)
bb_squeeze_breakout_long = bb_squeeze[1] and close > bb_upper and bb_expansion
smc_confirmation_long = (bos_bullish or choch_bullish or liquidity_grab_bullish) and order_block_bullish
momentum_long = rsi > 50 and stoch_k > stoch_d
volume_confirmation_long = volume_spike

long_condition = bb_squeeze_breakout_long and 
                 smc_confirmation_long and 
                 momentum_long and 
                 volume_confirmation_long and 
                 atr_ok and 
                 time_ok and 
                 news_ok and 
                 active_session

// Condi√ß√µes Short (BB Squeeze + SMC Breakout Bearish)
bb_squeeze_breakout_short = bb_squeeze[1] and close < bb_lower and bb_expansion
smc_confirmation_short = (bos_bearish or choch_bearish or liquidity_grab_bearish) and order_block_bearish
momentum_short = rsi < 50 and stoch_k < stoch_d
volume_confirmation_short = volume_spike

short_condition = bb_squeeze_breakout_short and 
                  smc_confirmation_short and 
                  momentum_short and 
                  volume_confirmation_short and 
                  atr_ok and 
                  time_ok and 
                  news_ok and 
                  active_session

// ===== L√ìGICA DE SA√çDA =====
// C√°lculo de Stop Loss e Take Profit
stop_distance = atr * atr_multiplier
profit_distance = stop_distance * risk_reward_ratio

// Entrada Long
if long_condition and barstate.isconfirmed and strategy.position_size == 0
    stop_loss = close - stop_distance
    take_profit = close + profit_distance
    
    strategy.entry("Long BB+SMC", strategy.long)
    strategy.exit("Long Exit", "Long BB+SMC", stop=stop_loss, limit=take_profit)
    
    // Trailing Stop se habilitado
    if use_trailing_stop
        strategy.exit("Long Trailing", "Long BB+SMC", trail_price=close, trail_offset=atr * trailing_stop_atr)

// Entrada Short
if short_condition and barstate.isconfirmed and strategy.position_size == 0
    stop_loss = close + stop_distance
    take_profit = close - profit_distance
    
    strategy.entry("Short BB+SMC", strategy.short)
    strategy.exit("Short Exit", "Short BB+SMC", stop=stop_loss, limit=take_profit)
    
    // Trailing Stop se habilitado
    if use_trailing_stop
        strategy.exit("Short Trailing", "Short BB+SMC", trail_price=close, trail_offset=atr * trailing_stop_atr)

// ===== PLOTS E VISUALIZA√á√ïES =====
// Bollinger Bands
plot(bb_upper, "BB Superior", color=color.orange, linewidth=2)
plot(bb_lower, "BB Inferior", color=color.orange, linewidth=2)
plot(bb_middle, "BB M√©dia", color=color.orange, linewidth=1, style=plot.style_line)

// BB Squeeze Background
bgcolor(bb_squeeze ? color.new(color.yellow, 90) : na, title="BB Squeeze")

// SMC Levels
plot(highest_high, "SMC High", color=color.red, linewidth=1, style=plot.style_line)
plot(lowest_low, "SMC Low", color=color.green, linewidth=1, style=plot.style_line)

// Liquidity Zones
plot(liquidity_high, "Liquidity High", color=color.red, linewidth=1, style=plot.style_circles)
plot(liquidity_low, "Liquidity Low", color=color.green, linewidth=1, style=plot.style_circles)

// Sinais de Entrada
plotchar(long_condition, "Long Signal", "‚ñ≤", location.belowbar, color=color.green, size=size.normal)
plotchar(short_condition, "Short Signal", "‚ñº", location.abovebar, color=color.red, size=size.normal)

// SMC Signals
plotchar(bos_bullish, "BOS Bullish", "B", location.belowbar, color=color.blue, size=size.small)
plotchar(bos_bearish, "BOS Bearish", "S", location.abovebar, color=color.blue, size=size.small)
plotchar(choch_bullish, "CHoCH Bullish", "C", location.belowbar, color=color.purple, size=size.small)
plotchar(choch_bearish, "CHoCH Bearish", "C", location.abovebar, color=color.purple, size=size.small)

// Background para Sess√µes
bgcolor(london_active and use_session_filter ? color.new(color.blue, 95) : na, title="Sess√£o Londres")
bgcolor(ny_active and use_session_filter ? color.new(color.orange, 95) : na, title="Sess√£o NY")
bgcolor(tokyo_active and use_session_filter ? color.new(color.purple, 95) : na, title="Sess√£o T√≥quio")

// ===== ALERTAS =====
alertcondition(long_condition, title="BB Squeeze + SMC Long", message="Sinal de compra BB Squeeze + SMC detectado")
alertcondition(short_condition, title="BB Squeeze + SMC Short", message="Sinal de venda BB Squeeze + SMC detectado")

// ===== INFORMA√á√ïES ADICIONAIS =====
// Display de informa√ß√µes na tela
var table info_table = table.new(position.top_right, 2, 10, bgcolor=color.white, border_width=1)

if barstate.islast
    table.cell(info_table, 0, 0, "BB Width", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 0, str.tostring(bb_width, "#.####"), text_color=color.black)
    
    table.cell(info_table, 0, 1, "BB Squeeze", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 1, bb_squeeze ? "Sim" : "N√£o", 
               text_color=bb_squeeze ? color.yellow : color.gray)
    
    table.cell(info_table, 0, 2, "ATR", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 2, str.tostring(atr, "#.####"), text_color=color.black)
    
    table.cell(info_table, 0, 3, "RSI", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 3, str.tostring(rsi, "#.##"), text_color=color.black)
    
    table.cell(info_table, 0, 4, "BOS", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 4, bos_bullish ? "Bullish" : bos_bearish ? "Bearish" : "Neutral", 
               text_color=bos_bullish ? color.green : bos_bearish ? color.red : color.gray)
    
    table.cell(info_table, 0, 5, "CHoCH", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 5, choch_bullish ? "Bullish" : choch_bearish ? "Bearish" : "Neutral", 
               text_color=choch_bullish ? color.green : choch_bearish ? color.red : color.gray)
    
    table.cell(info_table, 0, 6, "Volume", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 6, volume_spike ? "Alto" : "Normal", 
               text_color=volume_spike ? color.green : color.gray)
    
    table.cell(info_table, 0, 7, "Sess√£o", text_color=color.black, bgcolor=color.gray)
    session_text = london_active and use_session_filter ? "Londres" : 
                   ny_active and use_session_filter ? "NY" : 
                   tokyo_active and use_session_filter ? "T√≥quio" : "Fechado"
    table.cell(info_table, 1, 7, session_text, text_color=color.black)
    
    table.cell(info_table, 0, 8, "Posi√ß√£o", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 8, strategy.position_size > 0 ? "Long" : strategy.position_size < 0 ? "Short" : "Neutro", 
               text_color=strategy.position_size > 0 ? color.green : strategy.position_size < 0 ? color.red : color.gray)
    
    table.cell(info_table, 0, 9, "P&L", text_color=color.black, bgcolor=color.gray)
    table.cell(info_table, 1, 9, str.tostring(strategy.netprofit, "#.##"), 
               text_color=strategy.netprofit > 0 ? color.green : color.red)

// ===== COMENT√ÅRIOS EXPLICATIVOS =====
// Esta estrat√©gia combina Bollinger Bands Squeeze com Smart Money Concepts para day trade em forex:
// 
// 1. BOLLINGER BANDS SQUEEZE:
//    - Detecta per√≠odos de baixa volatilidade (acumula√ß√£o)
//    - Breakout da zona de compress√£o indica in√≠cio de movimento
//    - Confirma√ß√£o com expans√£o das bandas
//
// 2. SMART MONEY CONCEPTS (SMC):
//    - Break of Structure (BOS): Rompimento de estrutura anterior
//    - Change of Character (CHoCH): Mudan√ßa de car√°ter do mercado
//    - Liquidity Zones: Zonas de liquidez (highs/lows anteriores)
//    - Order Blocks: Zonas de alta probabilidade de revers√£o
//
// 3. L√ìGICA DE ENTRADA:
//    - BB Squeeze + Breakout na dire√ß√£o da tend√™ncia
//    - Confirma√ß√£o SMC (BOS, CHoCH, Liquidity Grab)
//    - Momentum positivo (RSI, Stochastic)
//    - Confirma√ß√£o de volume
//
// 4. GERENCIAMENTO DE RISCO:
//    - Stop loss baseado em ATR
//    - Take profit com risk/reward configur√°vel
//    - Trailing stop opcional
//    - Position sizing baseado em risco
//
// 5. FILTROS FOREX:
//    - Filtros de sess√£o (Londres, NY, T√≥quio)
//    - Filtros de tempo para evitar spreads altos
//    - Evita hor√°rios de not√≠cias importantes
//
// Otimizada para pares majors como EURUSD, GBPUSD, USDJPY em timeframes M5-M15
